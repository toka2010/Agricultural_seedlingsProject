@model IEnumerable<Agricultural_seedlingsProject.Models.Fruit>
@{
    ViewBag.Title = "fruit";
}


@{ 
    string f = "fruit";
}
<div>
    <!--Nav                -->


    <div style="margin-top: 10%; width: 100%; ">
        <div class="row row-cols-1 row-cols-md-4" style="max-width: 100%; padding-left: 20px;">
            @foreach (var item in Model)
            {

                if (item.Quantity == 0)
                {
                    <a href="/Home/checkoutform/?n=@item.FruitName&p=@item.Price&t=@f" class="nav-link disabled">
                        <div class="col mb-4  fru">
                            <div class="card">
                                <img src="~/image/@item.Image" class="card-img-top" alt="..." height="270px">
                                <div class="card-body">
                                    <h4 class="card-title">@item.FruitName</h4>
                                    <p class="card-text">Price: @item.Price KD</p>
                                    <p class="card-text">Quantity: @item.Quantity</p>
                                </div>
                            </div>
                        </div>
                    </a>}
                else
                {
                    <a href="/Home/checkoutform/?n=@item.FruitName&p=@item.Price&t=@f" >
                        <div class="col mb-4  fru">
                            <div class="card">
                                <img src="~/image/@item.Image" class="card-img-top" alt="..." height="270px">
                                <div class="card-body">
                                    <h4 class="card-title">@item.FruitName</h4>
                                    <p class="card-text">Price: @item.Price KD</p>
                                    <p class="card-text">Quantity: @item.Quantity</p>
                                </div>
                            </div>
                        </div>
                    </a>
                }
            }

        </div>

    </div>



</div>




<!-- Footer -->
    </div>
